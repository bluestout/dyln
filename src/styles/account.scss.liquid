@include media-query($large-down) {
  .account-body__header-tabs {
    display: block;
    border-bottom: 2px solid $color-theme-7;
    border-top: 2px solid $color-theme-7;
    margin: 0 0 25px;
    min-height: 40px;

    &:not(.open) {
      > :not(.active) {
        display: none;
      }

      .active .account-body__header-dash::after {
        content: "+";
      }
    }

    &.open {
      > :not(.active) {
        display: block;
      }
    }
  }

  .account-body__header-tab {
    position: relative;
    padding: 6px 40px 6px 0;
    width: 100%;
    border-top: 1px solid $color-theme-15;
    text-align: left;
  }

  .account-body__header-tab:not(.active) {
    font-weight: 500;
  }

  .account-body__header-tab.active {
    .account-body__header-dash::after {
      content: "-";
      position: absolute;
      right: 10px;
      top: 10px;
      font-size: 20px;
      line-height: 20px;
      font-weight: 400;
      color: $color-body-text;
    }
  }

  .account-body__header-tab.active::after {
    content: none;
  }
}

@include media-query($medium-up) {
  .registration-modal__title {
    background: none !important;
  }

  .account-edit__edit {
    display: none;
  }
}

