// start from middle bottom, progress counterclockwise settings
@for $i from 0 to $loops {
  .progress-circle[data-progress="#{$i * $step}"]:after {
    visibility: visible;
    @if $i < $half {
      $next-deg: 90deg - $increment * $i;
      background-image: linear-gradient(
          90deg,
          $back-color 50%,
          transparent 50%,
          transparent
        ),
        linear-gradient(
          $next-deg,
          $theme-color 50%,
          $back-color 50%,
          $back-color
        );
    } @else {
      $next-deg: 270deg - $increment * $i;
      background-image: linear-gradient(
          270deg,
          $theme-color 50%,
          transparent 50%,
          transparent
        ),
        linear-gradient(
          $next-deg,
          $back-color 50%,
