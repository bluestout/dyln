@mixin underline($color: $color-main-1, $is_active: true) {
  position: relative;

  &::after {
    @include transition(width);
    content: "";
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background-color: $color;
  }

  @if $is_active {
    &:hover {
      &::after {
        width: 100%;
      }
    }
  }
}

@mixin underline-b($color: $color-main-1, $thickness: 2px, $is_active: true) {
  position: relative;

  &::before {
    @include transition(width);
    content: "";
    position: absolute;
    bottom: -#{$thickness};
    left: 0;
    width: 0;
    height: $thickness;
    background-color: $color;
  }

  @if $is_active {
    &:hover {
      &::before {
        width: 100%;
      }
    }
  }
}

@mixin animated-wave($time: 1000ms, $z-index: $z-base) {
  @include transition(background-position $time);
  position: absolute;
  left: 0;
  @if $z-index != 0 {
    z-index: $z-index;
  }
  background-position: 0;
  background-repeat: repeat-x;
  width: 100%;
}

