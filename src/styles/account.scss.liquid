.account-bottles {
  margin: 0 0 100px;
}

.account-bottles__bottle {
  display: flex;
  flex-flow: row nowrap;
  margin: 0 0 20px;
  padding: 0 15px;
}

.account-bottles__bottle-progress-wrap {
  flex: 0 0 60px;
  margin: 0 20px 0 0;
}

.account-bottles__bottle-progress {
  position: relative;
  width: 60px;
  height: 60px;
  position: relative;
  background-color: $back-color;
  border-radius: 50%;
  display: inline-block;
}

.account-bottles__bottle-progress:hover::before,
.account-bottles__bottle-progress:focus::before {
  transform: scale(0.9);
}

.account-bottles__bottle-progress::before {
  content: "";
  position: absolute;
  left: 3px;
  right: 3px;
  top: 3px;
  bottom: 3px;
  background-color: $color-background;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: transform 0.2s ease;
}

.account-bottles__bottle-progress::after {
  background-color: $theme-color;
  border-radius: 50%;
  content: "";
  display: inline-block;
  height: 100%;
  width: 100%;
}

.account-bottles__bottle-image {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  max-width: 40px;
  max-height: 40px;
}

.account-bottles__bottle-body {
  flex: 0 0 calc(100% - 121px);
  align-self: center;
}

.account-bottles__bottle-title {
  @include font-header(700);
  @include text(16px, 23px, $color-title, 1px);
  margin: 0 0 2px;
}

.account-bottles__bottle-timer {
  @include font-header(500);
  @include text(12px, 24px, $color-main-1, 1px);
  margin: 0;
}

.account-bottles__bottle-option {
  margin: auto 0 auto 20px;
  align-self: center;
  flex: 0 0 20px;
}

.account-bottles__bottle-btn {
  @include font-body;
  @include no-browser-styling;
  position: relative;
  top: -5px;
  padding: 0;
  font-size: 26px;
  line-height: 20px;
  letter-spacing: -1px;
  color: $color-main-1;
}

.account-bottles__bottle-btn::after {
  content: "...";
}

.account-bottles__bottle-new-wrap {
  text-align: center;
  margin: 0 0 40px;
  padding: 0 15px;
}

.account-bottles__bottle-new-btw {
  @include button(solid, round, 1);
  padding: 8px 20px;
}

.account-bottles__bottle-new-icon {
  @include no-font-size;
  display: inline-block;
  vertical-align: middle;
  margin: 0 3px 0 0;
}

.account-bottles__bottle-new-text {
  display: inline-block;
