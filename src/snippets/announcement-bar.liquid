{%- if announcement-bar -%}
  {%- if home_only == false or template.name == 'index' -%}
    <div class="announcement-bar" data-announcement-bar>
      {% comment %} USA {% endcomment %}
      <div class="container" data-announcement-bar-usa>
        <div class="row justify-content-between no-gutters">
          {% if desktop_link_text_1 != blank %}
            <div class="col-lg-auto align-self-center d-none d-lg-block">
              <div class="announcement-bar__link-wrap">
                <a class="announcement-bar__link" href="{{ desktop_link_1 }}">{{ desktop_link_text_1 }}</a>
              </div>
            </div>
          {% endif %}

          <div class="col-lg-auto {% if mobile_link_text != blank %}col-sm-9 col-8{% else %}col-12{% endif %} align-self-center">
            <div class="announcement-bar__content">{{ content }}</div>
          </div>

          {% if desktop_link_text_2 != blank %}
            <div class="col-lg-auto align-self-center d-none d-lg-block">
              <div class="announcement-bar__link-wrap">
                <a class="announcement-bar__link" href="{{ desktop_link_2 }}">{{ desktop_link_text_2 }}</a>
              </div>
            </div>
          {% endif %}

          {% if mobile_link_text != blank %}
            <div class="col-sm-3 col-4 align-self-center d-lg-none">
              <div class="announcement-bar__link-wrap text-right">
                <a class="announcement-bar__link" href="{{ mobile_link }}">{{ mobile_link_text }}</a>
              </div>
            </div>
          {% endif %}
        </div>
      </div>

      {% comment %} Canada {% endcomment %}
      <div class="container" style="display:none" data-announcement-bar-ca>
        <div class="row justify-content-between no-gutters">
          {% if desktop_link_text_1_ca != blank %}
            <div class="col-lg-auto align-self-center d-none d-lg-block">
              <div class="announcement-bar__link-wrap">
                <a class="announcement-bar__link" href="{{ desktop_link_1_ca }}">{{ desktop_link_text_1_ca }}</a>
              </div>
            </div>
          {% endif %}

          <div class="col-lg-auto {% if mobile_link_text_ca != blank %}col-sm-9 col-8{% else %}col-12{% endif %} align-self-center">
            <div class="announcement-bar__content">{{ content_ca }}</div>
          </div>

          {% if desktop_link_text_2_ca != blank %}
            <div class="col-lg-auto align-self-center d-none d-lg-block">
              <div class="announcement-bar__link-wrap">
                <a class="announcement-bar__link" href="{{ desktop_link_2_ca }}">{{ desktop_link_text_2_ca }}</a>
              </div>
            </div>
          {% endif %}

          {% if mobile_link_text_ca != blank %}
            <div class="col-sm-3 col-4 align-self-center d-lg-none">
              <div class="announcement-bar__link-wrap text-right">
                <a class="announcement-bar__link" href="{{ mobile_link_ca }}">{{ mobile_link_text_ca }}</a>
              </div>
            </div>
          {% endif %}
        </div>
      </div>

      {% comment %} Other countries {% endcomment %}
      <div class="container" style="display:none" data-announcement-bar-other>
        <div class="row justify-content-between no-gutters">
          {% if desktop_link_text_1_other != blank %}
            <div class="col-lg-auto align-self-center d-none d-lg-block">
              <div class="announcement-bar__link-wrap">
                <a class="announcement-bar__link" href="{{ desktop_link_1_other }}">{{ desktop_link_text_1_other }}</a>
              </div>
            </div>
          {% endif %}

          <div class="col-lg-auto {% if mobile_link_text_other != blank %}col-sm-9 col-8{% else %}col-12{% endif %} align-self-center">
            <div class="announcement-bar__content">{{ content_other }}</div>
          </div>

          {% if desktop_link_text_2_other != blank %}
            <div class="col-lg-auto align-self-center d-none d-lg-block">
              <div class="announcement-bar__link-wrap">
                <a class="announcement-bar__link" href="{{ desktop_link_2_other }}">{{ desktop_link_text_2_other }}</a>
              </div>
            </div>
          {% endif %}

          {% if mobile_link_text_other != blank %}
            <div class="col-sm-3 col-4 align-self-center d-lg-none">
              <div class="announcement-bar__link-wrap text-right">
                <a class="announcement-bar__link" href="{{ mobile_link_other }}">{{ mobile_link_text_other }}</a>
              </div>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  {%- endif -%}
{%- endif -%}
