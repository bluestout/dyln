<div class="diffuser-modal" data-diffuser-info-modal style="display:none;">
  <div class="diffuser-modal__overlay" data-diffuser-info-modal-close></div>
  <div class="diffuser-modal__inner">
    <button type="button" class="diffuser-modal__close-x" data-diffuser-info-modal-close tabindex="-1" data-diffuser-info-modal-focusin>
      {% render 'icon-close' %}
      <span class="visually-hidden">{{ 'general.accessibility.close' | t }}</span>
    </button>
    {%- render 'responsive-image' with
      image: settings.diff_info_image,
      max_width: 440,
      max_height: 240,
      wrapper_class: "diffuser-modal__img-wrap",
      image_class: "diffuser-modal__img",
    -%}
    <h3>{{ settings.diff_info_title }}</h3>
    <div class="diffuser-modal__description">{{ settings.diff_info_description }}</div>
    <div class="diffuser-modal__banner">
      <div class="row no-gutters">
        <div class="col-sm-3 col-4 d-flex align-self-center">
          {%- render 'responsive-image' with
            image: settings.diff_info_banner_image,
            max_width: 440,
            max_height: 240,
            wrapper_class: "diffuser-modal__banner-img-wrap",
            image_class: "diffuser-modal__banner-img",
          -%}
        </div>

        <div class="col-sm-9 col-8 d-flex align-self-center">
          <div class="ml-4">
            <h4>{{ settings.diff_info_banner_title }}</h4>
            <p>{{ settings.diff_info_banner_description }}</p>
          </div>
        </div>
      </div>
    </div>
    <div class="diffuser-modal__close-wrap">
      <button type="button" class="diffuser-modal__close-btn" data-diffuser-info-modal-close tabindex="-1">{{ settings.diff_info_close_text }}</button>
    </div>
  </div>
</div>
