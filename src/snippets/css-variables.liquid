<style>
  {{ settings.font_heading | font_face }}
  {{ settings.font_body | font_face }}

  {%- assign font_body_bold = settings.font_body | font_modify: 'weight', 'bolder' -%}
  {%- assign font_body_bold_italic = font_body_bold | font_modify: 'style', 'italic' -%}

  {{ font_body_bold | font_face }}
  {{ font_body_bold_italic | font_face }}

  :root {
    --color-main: {{ settings.color_accent }};
    --color-main-2: {{ settings.color_accent_2 }};
    --color-main-3: {{ settings.color_accent_3 }};
    --color-accent: {{ settings.color_accent_1_s }};
    --color-accent-2: {{ settings.color_accent_2_s }};
    --color-accent-3: {{ settings.color_accent_3_s }};
    --color-supplementary-1: {{ settings.color_accent_1_s }};
    --color-supplementary-2: {{ settings.color_accent_2_s }};
    --color-supplementary-3: {{ settings.color_accent_3_s }};
    --color-body-text: {{ settings.color_body_text }};
    --color-title: {{ settings.color_title }};
    --color-title-light: {{ settings.color_title_light }};
    --color-main-background: {{ settings.color_main_bg }};
    --color-main-background-mobile: {{ settings.color_main_bg_mobile }};
    --color-blog-card-background: {{ settings.blog_article_card_background }};
    --color-blog-tagged-background: {{ settings.color_blog_tagged_background }};
    --color-blog-card-category: {{ settings.blog_article_card_category_links }};
    --color-blog-card-title: {{ settings.blog_article_card_title }};
    --color-border: {{ settings.color_body_text | color_lighten: 50 }};

    --font-heading: {{ settings.font_heading.family }}, {{ settings.font_heading.fallback_families }};
    --font-body: {{ settings.font_body.family }}, {{ settings.font_body.fallback_families }};
    --font-body-weight: {{ settings.font_body.weight }};
    --font-body-style: {{ settings.font_body.style }};
    --font-body-bold-weight: {{ font_body_bold.weight | default: 'bold' }};

    --font-size-h1-default: {{ settings.default_h1_fs }}px;
    --font-size-h2-default: {{ settings.default_h2_fs }}px;
    --font-size-h3-default: {{ settings.default_h3_fs }}px;
    --font-size-h4-default: {{ settings.default_h4_fs }}px;
    --font-size-h5-default: {{ settings.default_h5_fs }}px;
    --font-size-h6-default: {{ settings.default_h6_fs }}px;
    --font-size-p-default: {{ settings.default_p_fs }}px;

    --font-size-body-default: {{ settings.default_body_fs }}px;

    --grid-gap: {{ settings.default_grid_gap }}px;
    --max-container-width: {{ settings.default_max_container }}px;
  }
</style>
