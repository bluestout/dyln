{% layout none %}

{% capture results %}
  {% for item in search.results limit:5 %}
    {% assign product = item %}
    {% assign size = "" %}
    {% for tag in product.tags %}
      {% if tag contains "size-" %}
        {% assign size = tag | remove: 'size-' | replace: '-', ' ' | replace: '_', ' ' | capitalize %}
      {% endif %}
    {% endfor %}
    {% assign c_title = "" %}
    {% for c in product.collections %}
      {% if c.handle == 'all' or c.handle == 'most-popular' or c.handle == 'featured' %}
        {% continue %}
      {% endif %}
      {% assign c_title = c.title %}
      {% break %}
    {% endfor %}
    {
      "title"    : {{ product.title | json }},
      "url"      : {{ product.url | within: product.collections.last | json }},
      "thumbnail": {{ product.featured_image.src | product_img_url: 'medium' | json }},
      "size": {{ size | json }},
      "collection": {{ c_title | json }},
      "price"     : {{ product.price | money_without_trailing_zeros | json }}
    }
    {% unless forloop.last %},{% endunless %}
  {% endfor %}
{% endcapture %}
{
  "results_count": {{ search.results_count }},
  "results": [{{ results }}]
}
