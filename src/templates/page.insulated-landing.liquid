<div class="default-page">
  <div class="container">

    {% comment %} because h1 is being added more than once into the content on some pages {% endcomment %}
    {% assign page_content = page.content %}
    {% assign page_content = page_content | replace_first: '<h1', '<TEMP' %}
    {% assign page_content = page_content | replace_first: '</h1', '</TEMP' %}
    {% assign page_content = page_content | replace: '<h1', '<h2' %}
    {% assign page_content = page_content | replace: '</h1', '</h2' %}
    {% assign page_content = page_content | replace_first: '<TEMP', '<h1' %}
    {% assign page_content = page_content | replace_first: '</TEMP', '</h1' %}

    <div class="rte">
      {% unless page.content contains "<h1" %}
        <h1 class="text-center">{{ page.title }}</h1>
      {% endunless %}

      {{ page_content }}
    </div>

  </div>
</div>