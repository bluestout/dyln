<!doctype html>
<html class="no-js supports-no-cookies" lang="{{ shop.locale }}">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <meta name="theme-color" content="{{ settings.color_accent }}">
  <link rel="canonical" href="{{ canonical_url }}">

  {% render 'ad-ap-anti-flicker' %}
  {% render 'ad-ap-gtm' %}

  {%- if settings.favicon != blank -%}
    <link rel="shortcut icon" href="{{ settings.favicon | img_url: '32x32' }}" type="image/png">
  {%- endif -%}

  {%- capture seo_title -%}
    {{ page_title }}
    {%- if current_tags -%}
      {%- assign meta_tags = current_tags | join: ', ' -%} &ndash; {{ 'general.meta.tags' | t: tags: meta_tags -}}
    {%- endif -%}
    {%- if current_page != 1 -%}
      &ndash; {{ 'general.meta.page' | t: page: current_page }}
    {%- endif -%}
    {%- assign escaped_page_title = page_title | escape -%}
    {%- unless escaped_page_title contains shop.name -%}
      &ndash; {{ shop.name }}
    {%- endunless -%}
  {%- endcapture -%}
  <title>{{ seo_title | strip }}</title>

  {%- if page_description -%}
    <meta name="description" content="{{ page_description | escape }}">
  {%- endif -%}

  {% render 'social-meta-tags' %}
  {% render 'style-tags', layout: 'theme' %}
  {% render 'css-variables' %}

  {% comment %} Fonts {% endcomment %}
  <link href="https://fonts.googleapis.com/css?family=Open+Sans|Poppins:400,500,700&display=swap" rel="stylesheet">

  {% comment %} this is needed so translated strings can be used in js {% endcomment %}
  {%- render 'theme-strings' -%}

  <script>
    document.documentElement.className = document.documentElement.className.replace('no-js', '');
    {% if template.directory == 'customers' %}
      theme.allCountryOptionTags = {{ all_country_option_tags | json }};
    {% endif %}
  </script>

  {% render 'script-tags', layout: 'theme' %}

  {{ content_for_header }}

  {% render 'weglot_hreftags' %}
  {% render 'weglot_switcher' %}

  <script
    src="https://code.jquery.com/jquery-3.5.1.min.js"
    integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
    crossorigin="anonymous"></script>

  <!-- Hotjar Tracking Code for dyln.co -->
  <script>
    (function(h,o,t,j,a,r){
      h.hj=h.hj||function(){(h.hj.q=h.hj.q||[]).push(arguments)};
      h._hjSettings={hjid:346758,hjsv:6};
      a=o.getElementsByTagName('head')[0];
      r=o.createElement('script');r.async=1;
      r.src=t+h._hjSettings.hjid+j+h._hjSettings.hjsv;
      a.appendChild(r);
    })(window,document,'https://static.hotjar.com/c/hotjar-','.js?sv=');
  </script>
</head>

<body id="{{ page_title | handle }}" class="template-{{ template.name | handle }}{% if template contains 'blog' %} {{ template | handleize }}{% endif %}">
  <!-- Google Tag Manager (noscript) -->
  <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-K877228"
  height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
  <!-- End Google Tag Manager (noscript) -->

  {% comment %}  {% endcomment %}
  <input type="hidden" id="country-hidden" />
  <input type="hidden" id="unavailable-variant" />
  <input type="hidden" id="unavailable-notify" />
  <input type="hidden" id="geo-location-info" />
  {{ 'custom.js' | asset_url | script_tag  }}

  <nav class="visually-hidden skip-link">
    <a class="skip-link" href="#MainContent" >{{ "general.accessibility.skip_to_content" | t }}</a>
    <ul>
      {% for link in linklists["accessibility-menu"].links %}
        <li>
          <a href="{{ link.url }}" class="skip-link">{{ link.title }}</a>
        </li>
      {% endfor %}
    </ul>
  </nav>

  {% section 'header' %}

  <main role="main" id="MainContent">
    {{ content_for_layout }}
  </main>

  {% render 'header-cart' %}

  {% section 'footer' %}

  {%- section 'color-swatches' -%}

  {%- section 'cart-upsell' -%}

  {% render 'ajax-message' %}

  {% include 'subscription-theme-footer' %}

  {% include 'subscription-checkout-redirect' %}

</body>
</html>
