<!DOCTYPE html>
<html lang="{{ shop.locale }}" class="{{ checkout_html_classes }}">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="referrer" content="origin">
    <meta name="theme-color" content="{{ settings.color_accent }}">
    <link rel="canonical" href="{{ canonical_url }}">
    <title>{{ page_title }}</title>

    {{ content_for_header }}

    {{ checkout_stylesheets }}  
    {{ checkout_scripts }}
    {% render 'ad-ap-gtm-gtag' %}
    {%- if settings.favicon != blank -%}
        <link rel="shortcut icon" href="{{ settings.favicon | img_url: '32x32' }}" type="image/png">
    {%- endif -%}
    {% render 'script-tags', layout: 'checkout' %}
{% comment %}
    {% render 'weglot_hreftags' %}
    {% render 'weglot_switcher' %}
  {% endcomment %}

    <script
            src="https://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
            crossorigin="anonymous"></script>
    {% render 'style-tags', layout: 'checkout' %}

    <style>
        .page--banner .banner {
            padding-top: 1em;
            padding-bottom: 1em;
            text-align:center;
        }
        .link {
            font-family: Poppins;
            font-size: 12px;
            font-weight: 400;
            letter-spacing: 0.71px;
            color: #ffffff;
            display:inline-block;
            vertical-align:middle;
        }
        .link:hover,.link:hover {
            color: #ffffff;
        }
        .text {
            font-family: Poppins;
            font-size: 12px;
            font-weight: 600;
            letter-spacing: 0.71px;
            color: #ffffff;
            display:inline-block;
            vertical-align:middle;
        }
        .lock {
            display:inline-block;
            vertical-align:middle;
            margin: 0 0 0 5px;
            width: 12px;
            height: 14px;
        }
        .squiggle {
            display:inline-block;
            vertical-align:middle;
            margin: 0 25px;
        }

        .mobile-logo .logo.logo--left {
            text-align: center;
        }

        @media (max-width: 999px) {
            .mobile-breadcrumb {
                display: block;
            }

            .mobile-logo .logo.logo--left {
                display: block;
            }
            .mobile-logo {
                margin: 20px 0 0;
            }
        }

        @media (min-width: 1000px) {
            .sidebar::after {
                box-shadow:none;
            }
            .mobile-breadcrumb {
                display: none;
            }
            .mobile-logo .logo.logo--left {
                display: none;
            }
            .main__header .logo.logo--left {
                display: block;
            }
        }

        @media (min-width: 576px) {
            .break {
                display:none;
            }
        }

        @media (max-width: 575px) {
            .squiggle {
                display:none;
            }
            .text {
                font-weight: 400;
            }
            .page--banner .banner {
                padding-top: 8px;
                padding-bottom: 8px;
            }
        }
    </style>
</head>
<body>
{{ skip_to_content_link }}

<!-- Google Tag Manager (noscript) -->
<noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-K877228"
height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
<!-- End Google Tag Manager (noscript) -->    
    <div class="banner" data-header>
      <div class="wrap">
        {{ content_for_logo }}
      </div>
    </div>

    {{ order_summary_toggle }}

    <div class="content" data-content>
      <div class="wrap">
        <div class="main" role="main">
          <div class="main__header">
            {{ content_for_logo }}
            {{ breadcrumb }}
            {{ alternative_payment_methods }}
          </div>
          <div class="main__content">
            {{ content_for_layout }}                        
          </div>
          <div class="main__footer">
            {{ content_for_footer }}
          </div>
        </div>
        <div class="sidebar" role="complementary">
          <div class="sidebar__header">
            {{ content_for_logo }}
          </div>
          <div class="sidebar__content">
            {{ content_for_order_summary }}
          </div>
        </div>        
      </div>
    </div>

{{ tracking_code }}

<script>
    let cartLinks = document.querySelectorAll(".breadcrumb__link");
    for (let cartLinksIndex = 0; cartLinksIndex < cartLinks.length; cartLinksIndex++) {
        cartLinks[cartLinksIndex].addEventListener("click", function(event) {
            event.preventDefault();
            window.location = "/collections/all?opencart=1";
        });
    }
</script>
</body>
</html>
