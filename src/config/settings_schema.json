[
  {
    "name": "theme_info",
    "theme_name": "Starter theme",
    "theme_version": "1.0.0",
    "theme_author": "Shopify",
    "theme_documentation_url": "https://github.com/Shopify/starter-theme",
    "theme_support_url": "https://github.com/Shopify/starter-theme/issues"
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "color",
        "id": "color_accent",
        "label": "Theme color",
        "default": "#00aedb"
      },
      {
        "type": "color",
        "id": "color_accent_2",
        "label": "Theme color 2",
        "default": "#20D480"
      },
      {
        "type": "color",
        "id": "color_accent_3",
        "label": "Theme color 3",
        "default": "#E7F0F2"
      },
      {
        "type": "color",
        "id": "color_accent_1_s",
        "label": "Theme accent",
        "default": "#0080B7",
        "info": "Theme color accent - Used for button transitions and similar."
      },
      {
        "type": "color",
        "id": "color_accent_2_s",
        "label": "Theme accent 2",
        "default": "#00BF76",
        "info": "Theme color 2 accent - Used for button transitions and similar."
      },
      {
        "type": "color",
        "id": "color_accent_3_s",
        "label": "Theme accent 3",
        "default": "#B3D8E1",
        "info": "Theme color 3 accent - Used for button transitions and similar."
      },
      {
        "type": "color",
        "id": "color_title",
        "label": "Title",
        "default": "#333C41"
      },
      {
        "type": "color",
        "id": "color_title_light",
        "label": "Title - Light",
        "default": "#fff"
      },
      {
        "type": "color",
        "id": "color_body_text",
        "label": "Text",
        "default": "#161d25"
      },
      {
        "type": "color",
        "id": "color_main_bg",
        "label": "Background Desktop",
        "default": "#fff"
      },
      {
        "type": "color",
        "id": "color_main_bg_mobile",
        "label": "Background Mobile",
        "default": "#fff"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "font_picker",
        "id": "font_heading",
        "default": "helvetica_n4",
        "label": "Headings"
      },
      {
        "type": "font_picker",
        "id": "font_body",
        "default": "helvetica_n4",
        "label": "Body text"
      }
    ]
  },
  {
    "name": "Social media",
    "settings": [
      {
        "type": "header",
        "content": "Social sharing image"
      },
      {
        "type": "image_picker",
        "id": "share_image",
        "label": "Image",
        "info": "Shown when sharing a link on social media. [Learn more](https://help.shopify.com/manual/using-themes/troubleshooting/showing-social-media-thumbnail-images/) about image thumbnails."
      },
      {
        "type": "header",
        "content": "Social sharing options"
      },
      {
        "type": "checkbox",
        "id": "social_sharing_blog",
        "label": "Enable sharing for blog articles",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "share_facebook",
        "label": "Share on Facebook",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "share_twitter",
        "label": "Tweet on Twitter",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "share_pinterest",
        "label": "Pin on Pinterest",
        "default": true
      },
      {
        "type": "header",
        "content": "Sharing links"
      },
      {
        "type": "text",
        "id": "social_twitter_link",
        "label": "Twitter link"
      },
      {
        "type": "text",
        "id": "social_facebook_link",
        "label": "Facebook link"
      },
      {
        "type": "text",
        "id": "social_pinterest_link",
        "label": "Pinterest link"
      },
      {
        "type": "text",
        "id": "social_instagram_link",
        "label": "Instagram link"
      },
      {
        "type": "text",
        "id": "social_snapchat_link",
        "label": "Snapchat link"
      },
      {
        "type": "text",
        "id": "social_tumblr_link",
        "label": "Tumblr link"
      },
      {
        "type": "text",
        "id": "social_youtube_link",
        "label": "Youtube link"
      },
      {
        "type": "text",
        "id": "social_vimeo_link",
        "label": "Vimeo link"
      }
    ]
  },
  {
    "name": "Cart",
    "settings": [
      {
        "type": "checkbox",
        "id": "cart_notes_enable",
        "label": "Enable cart notes",
        "default": true
      },
      {
        "type": "range",
        "id": "shipping_threshold",
        "min": 0,
        "max": 500,
        "step": 5,
        "unit": "$",
        "label": "Shipping Threshold",
        "default": 100
      }
    ]
  },
  {
    "name": "Favicon",
    "settings": [
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon image",
        "info": "Will be scaled down to 32 x 32px"
      }
    ]
  }
]
