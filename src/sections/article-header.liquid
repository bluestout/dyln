{% assign article = articles[section.settings.featured_articles] %}
{% if section.settings.show %}
  <div class="container-fluid">
    <div class="article-header__wrapper">
      {% for block in section.blocks %}
        {% assign article = articles[block.settings.featured_articles] %}
        <div class="article-header__featured">
          <a href="{{ article.url }}"></a>
          <div class="article-header__title">
            <h3>{{- article.title -}}</h3>
          </div>
        </div>
        {% include 'icon-divider' %}
      {% endfor %}
    </div>
  </div>
{% endif %}

{% schema %}
{
  "name":"Article Featured Header",
  "class":"article-header",
  "settings": [
    {
      "type": "checkbox",
      "id": "show",
      "label": "Show this section?",
      "default": true
    }
  ],
  "blocks":[
    {
      "type":"article",
      "name":"Article Header Featured",
      "limit":3,
      "settings":[
        {
          "type":"article",
          "id":"featured_articles",
          "label":"Select a Featured Articles to be displayed in the header"
        }
      ]
    }
  ]
}
{% endschema %}
