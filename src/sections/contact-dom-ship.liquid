{% if section.settings.title != empty %}
  <h3>{{ section.settings.title }}</h3>
{% endif %}

{% if section.settings.title != empty %}
  <p>{{ section.settings.title }}</p>
{% endif %}

<div data-accordion-parent=true>
  {% if section.blocks.size > 0 %}
    <div class="contact-faqs__list">
      {% for block in section.blocks %}
        {% assign contact_faq_article = articles[block.settings.faq_article] %}
        <div class="contact-faqs__faq">
          <button class="contact-faqs__faq-btn" data-accordion-button="{{ forloop.index }}">
            <span class="contact-faqs__faq-q">
              {{ contact_faq_article.title }}
            </span>
            <span class="contact-faqs__faq-closed">+</span>
            <span class="contact-faqs__faq-open">-</span>
          </button>
          <div class="contact-faqs__faq-a" data-accordion-content="{{ forloop.index }}" style="display: none;">{{ contact_faq_article.content }}</div>
        </div>
      {% endfor %}
    </div>
  {% endif %}
</div>

{% schema %}
  {
    "name": "Contact FAQs",
    "class": "contact-ship",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Section Title"
      },
      {
        "type": "textarea",
        "id": "description",
        "label": "Description"
      }
    ],
    "blocks": [
      {
        "type": "faq",
        "name": "FAQ",
        "settings": [
          {
            "type": "article",
            "id": "faq_article",
            "label": "FAQ article"
          }
        ]
      }
    ]
  }
{% endschema %}
