<div class="container-fluid">
  <div class="container">
    <div class="row">
      <div class="po-on-the-go__container">
        <div class="col-md-3 col-lg-4">
          <h2>{{ section.settings.title }}</h2>
        </div>
        <div class="col-md-9 col-md-8 d-flex justify-content-center align-items-center flex-wrap">
          {% for block in section.blocks %}
            <div class="col-xs-12 col-md-3 text-center">
              {%- render 'responsive-image' with
                image: block.settings.featured_step_icon.src,
                max_width: 1024,
                max_height: 1024,
                wrapper_class: "po-on-the-go__image-container",
                image_class: "po-on-the-go__image",
                snippet_index: 77
              -%}
              <h3>{{ block.settings.featured_step_title }}</h3>
              <p>{{ block.settings.featured_step_content }}</p>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
  "name": "Pre-Order On The Go",
  "class": "po-on-the-go",
  "settings": [
  {
  "type": "text",
  "id": "title",
  "label": "Title"
  }
  ],
    "blocks":[
      {
        "type":"text",
        "name":"Featured Steps",
        "settings":[
        {
          "type":"image_picker",
          "id":"featured_step_icon",
          "label":"Featured Step Image"
        },
        {
          "type":"text",
          "id":"featured_step_title",
          "label":"Featured Step Title"
        },
        {
          "type":"textarea",
          "id":"featured_step_content",
          "label":"Featured Item Content"
        }
      ]
    }
    ]
  }
{% endschema %}
