{% if section.settings.title != empty %}
  <h3 class="d-none d-sm-block">{{ section.settings.title }}</h3>
{% endif %}

{% if section.settings.help_link_1_text != empty %}
  {% assign help_1 = section.settings.help_link_1 %}
  {% if section.settings.help_1_is_modal %}
    {% assign help_1 = "contact-modal-1" %}
  {% endif %}

  <a class="contact-sidebar__link" href="{{ section.settings.help_link_1 }}">
    <span class="contact-sidebar__link-i">{% render 'icon-phone' %}</span>
    <span class="contact-sidebar__link-t">{{ section.settings.help_link_1_text }}</span>
  </a>

  {% if section.settings.help_1_is_modal %}
    <div class="contact-sidebar__modal-wrap" id="contact-modal-1">
      <div class="contact-sidebar__modal">
        <p class="contact-sidebar__modal-title">{{ section.settings.modal_1_title }}</p>
        <button class="contact-sidebar__modal-close">
          {% render 'icon-close' %}
        </button>

        <div class="contact-sidebar__modal-buttons">
          {% if section.settings.modal_1_button_1_text != blank %}
            <a class="contact-sidebar__modal-button" href="{{ section.settings.modal_1_button_1 }}">
              <span class="contact-sidebar__modal-b-i">{% render 'icon-phone' %}</span>
              <span class="contact-sidebar__modal-b-t">{{ section.settings.modal_1_button_1_text }}</span>
            </a>
          {% endif %}
          {% if section.settings.modal_1_button_2_text != blank %}
            <a class="contact-sidebar__modal-button" href="{{ section.settings.modal_1_button_2 }}">
              <span class="contact-sidebar__modal-b-i">{% render 'icon-phone' %}</span>
              <span class="contact-sidebar__modal-b-t">{{ section.settings.modal_1_button_2_text }}</span>
            </a>
          {% endif %}
        </div>

        {% if section.settings.modal_1_note != blank %}
          <p class="contact-sidebar__modal-note">{{ section.settings.modal_1_note }}</p>
        {% endif %}
      </div>
    </div>
  {% endif %}
{% endif %}

{% assign help_2 = section.settings.help_link_2 %}
{% if section.settings.help_2_is_modal %}
  {% assign help_2 = "contact-modal-2" %}
{% endif %}

{% if section.settings.help_link_2_text != empty %}
  {% assign help_2 = section.settings.help_link_2 %}
  {% if section.settings.help_2_is_modal %}
    {% assign help_2 = "contact-modal-2" %}
  {% endif %}

  <a class="contact-sidebar__link" href="{{ section.settings.help_link_2 }}">
    <span class="contact-sidebar__link-i">{% render 'icon-mail' %}</span>
    <span class="contact-sidebar__link-t">{{ section.settings.help_link_2_text }}</span>
  </a>

  {% if section.settings.help_2_is_modal %}
    <div class="contact-sidebar__modal-wrap" id="contact-modal-2">
      <div class="contact-sidebar__modal">
        <p class="contact-sidebar__modal-title">{{ section.settings.modal_2_title }}</p>
        <button class="contact-sidebar__modal-close">
          {% render 'icon-close' %}
        </button>

        <div class="contact-sidebar__modal-buttons">
          {% if section.settings.modal_2_button_1_text != blank %}
            <a class="contact-sidebar__modal-button" href="{{ section.settings.modal_2_button_1 }}">
              <span class="contact-sidebar__modal-b-i">{% render 'icon-phone' %}</span>
              <span class="contact-sidebar__modal-b-t">{{ section.settings.modal_2_button_1_text }}</span>
            </a>
          {% endif %}
          {% if section.settings.modal_2_button_2_text != blank %}
            <a class="contact-sidebar__modal-button" href="{{ section.settings.modal_2_button_2 }}">
              <span class="contact-sidebar__modal-b-i">{% render 'icon-phone' %}</span>
              <span class="contact-sidebar__modal-b-t">{{ section.settings.modal_2_button_2_text }}</span>
            </a>
          {% endif %}
        </div>

        {% if section.settings.modal_2_note != blank %}
          <p class="contact-sidebar__modal-note">{{ section.settings.modal_2_note }}</p>
        {% endif %}
      </div>
    </div>
  {% endif %}
{% endif %}

{% if section.settings.help_link_3_text != empty %}
  <a class="contact-sidebar__link" href="{{ section.settings.help_link_2 }}">
    <span class="contact-sidebar__link-i">{% render 'icon-chat' %}</span>
    <span class="contact-sidebar__link-t">{{ section.settings.help_link_3_text }}</span>
  </a>
{% endif %}

